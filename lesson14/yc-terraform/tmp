# security group for private VM
resource "yandex_vpc_security_group" "private_sg" {
  name = "private-sg"
  rule {
    direction = "ingress"
    protocol  = "TCP"
    ports     = ["22", "8080"] # SSH, порт 8080
 }
}

# security group for public VM
resource "yandex_vpc_security_group" "public_sg" {
  name = "public-sg"

  rule {
    direction = "ingress"
    protocol  = "TCP"
    ports     = ["22", "80", "443"] # SSH, HTTP, HTTPS
  }
}

